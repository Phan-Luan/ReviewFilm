<style>
  #btn-register {
    background-color: #c3073f !important;
    color: #fff;
  }
</style>

<body>
  <nav class="navbar navbar-expand-lg position-absolute top-0 z-index-3 w-100 shadow-none my-3 navbar-transparent mt-4">
    <div class="container">
      <a class="navbar-brand font-weight-bolder ms-lg-0 ms-3 text-white" href="/">
        Review Phim
      </a>
    </div>
  </nav>
  <!-- End Navbar -->
  <main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg"
      style="background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/signup-cover.jpg'); background-position: top;">
      <span class="mask bg-gradient-dark opacity-6"></span>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5 text-center mx-auto">
            <h1 class="text-white mb-2 mt-5">Welcome!</h1>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
          <div class="card z-index-0">
            <div class="card-header text-center pt-4">
              <h5>Tạo tài khoản</h5>
            </div>
            <div class="card-body">
              <div>
                <label for="">Họ tên</label>
                <input type="text" id="register-name" class="form-control" placeholder="Họ tên" aria-label="Họ tên">
                <label for="" class="text-danger" id="register-name-err"></label>
              </div>
              <div>
                <label for="">Email</label>
                <input type="email" id="register-email" class="form-control" placeholder="Email" aria-label="Email">
                <label for="" class="text-danger" id="register-email-err"></label>
              </div>
              <div>
                <label for="">Mật khẩu</label>
                <input type="password" id="register-password" class="form-control" placeholder="Password"
                  aria-label="Password">
                <label for="" class="text-danger" id="register-password-err"></label>
              </div>
              <div>
                <label for="">Nhập lại mật khẩu</label>
                <input type="password" id="register-confirm-password" class="form-control"
                  placeholder="Confirm Password" aria-label="Password">
                <label for="" class="text-danger" id="register-confirm-password-err"></label>
              </div>
              <div class="text-center">
                <button type="button" id="btn-register" class="btn w-100 my-4 ">
                  <div id="spinner-register" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>Đăng ký
                </button>
              </div>
              <p class="text-sm mt-3 mb-0">Bạn đã có tài khoản? <a href="/login" class="text-dark font-weight-bolder"
                  style="color: #c3073f !important;">Đăng nhập</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <script src="/assets/js/admin/core/popper.min.js"></script>
  <script src="/assets/js/admin/core/bootstrap.min.js"></script>
  <script src="/assets/js/admin/plugins/perfect-scrollbar.min.js"></script>
  <script src="/assets/js/admin/plugins/smooth-scrollbar.min.js"></script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <script src="/assets/js/admin/argon-dashboard.min.js?v=2.0.4"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"
    integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="/assets/js/client.js"></script>
</body>

</html>